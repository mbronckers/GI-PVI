            "args": [
                "--plot",
                "--epochs=100",
                "--inference_samples=10",
                "--name=debug"
            ]
        },
        {
            "name": "PVI Regression - Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/experiments/pvi_regression.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--inference_samples=10",
                "--name=pvi_debug"
            ]
        },
        {
            "name": "(All) PVI Regression - Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/experiments/pvi_regression.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--inference_samples=10",
                "--name=pvi_debug"
            ]
        },
        {
            "name": "Python: Current File",
            "type": "python",
